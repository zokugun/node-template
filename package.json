		"@types/glob": "^8.1.0",
		"@types/node": "^20.14.8",
		"chai": "^5.2.0",
		"commitizen": "^4.3.1",
		"eslint-plugin-chai-friendly": "^1.0.1",
		"fixpack": "^4.0.0",
		"glob": "^13.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.4",
		"release-it": "^18.1.2",
		"source-map-support": "^0.5.21",
		"tsc-watch": "^6.3.0",
